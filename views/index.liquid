{% render 'partials/head.liquid', title: 'Squad page' %}

<section>
  <h1>Squad 1G</h1>
  <p class="sub-title">Ontdek meer over onze squad door te <strong>categoriseren</strong> via de knoppen hieronder!</p>
  <ul class="filter-select-buttons">
    <li><a href="/">Avatar</a></li>
    <li><a href="/dier/">Dier</a></li>
    <li><a href="/emoji/">Emoji</a></li>
    <li><a href="/eten/">Eten</a></li>
    <li><a href="/hobby/">Hobby</a></li>
    <li><a href="/kleur/">Kleur</a></li>
    <li><a href="/land/">Land</a></li>
    <li><a href="/verjaardag/">Verjaardag</a></li>
  </ul>
</section>

<!-- Filter select dropdown -->
<article class="filter-bar">
  <img src="/assets/help.png" alt="help" class="help-icon" />
  <select id="country-filter">
    <option value="">Kies een optie</option>
  </select>
</article>

<div class="grid-container">
  {% for person in persons %}
  <figure class="card-layout" >
    <div class="card-inner">

      <!-- Voorkant van de kaart -->
      <div id="front" class="card-side {{ show }}">
        {% if show == 'avatar' %}
        {% if person.avatar and person.avatar != '' %}
        <img src="{{ person[show] }}" alt="Avatar van {{ person.name }}" />
        {% else %}
        <img src="https://github.com/{{ person.github_handle }}.png" alt="Avatar van {{ person.name }}" />
        {% endif %}
        {% else %}
        <article>{{ person[show] }}</article>
        {% endif %}
      </div>

      <!-- Achterkant van de kaart -->
      <div id="back" class="card-side">
        <span class="back-text">{{ person.name }}</span>
      </div>
    </div>
  </figure>
  {% endfor %}
</div>


{% render 'partials/foot.liquid', squads: squads %}