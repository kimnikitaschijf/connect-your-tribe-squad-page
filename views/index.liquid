{% render 'partials/head.liquid', title: 'Squad page' %}

<section>
  <h1>Squad 1G</h1>
  <p class="sub-title">Ontdek meer over onze squad door te <strong>categoriseren</strong> via de knoppen hieronder!</p>
  <ul class="filter-select-buttons">
    <li><button onclick="window.location.href='/'">Avatar</button></li>
    <li><button onclick="window.location.href='/dier/'">Dier</button></li>
    <li><button onclick="window.location.href='/emoji/'">Emoji</button></li>
    <li><button onclick="window.location.href='/eten/'">Eten</button></li>
    <li><button onclick="window.location.href='/hobby/'">Hobby</button></li>
    <li><button onclick="window.location.href='/kleur/'">Kleur</button></li>
    <li><button onclick="window.location.href='/land/'">Land</button></li>
    <li><button onclick="window.location.href='/verjaardag/'">Verjaardag</button></li>
  </ul>
</section>

<article class="filter-bar">
  <img src="/assets/help.png" alt="help" class="help-icon" />
  <select id="filters" name="Kies je filters">
    <option>Kies je filter</option>
    <option>...</option>
    <option>...</option>
    <option>...</option>
  </select>
</article>

<div class="grid-container">
  {% for person in persons %}
  <article class="card-layout">
    <div class="card-inner">

      <!-- Voorkant van de kaart -->
      <div id="front" class="card-side {{show}}">
        {% if show == 'avatar' %} {% if person.avatar and person.avatar != '' %}
        <img src="{{ person[show] }}" alt="Avatar van {{ person.name }}" />
        {% else %}
        <img src="https://github.com/{{ person.github_handle }}.png" alt="Avatar van {{ person.name }}" />
        {% endif %} {% else %}
        <article>{{ person[show] }}</article>
        {% endif %}
      </div>

      <!-- Achterkant van de kaart -->
      <div id="back" class="card-side">
        <span class="back-text">{{ person.name }}</span>
      </div>
    </div>
  </article>
  {% endfor %}
</div>

{% render 'partials/foot.liquid', squads: squads %}